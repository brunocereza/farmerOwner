{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "16.18.0",
    "npm": "8.19.2"
  },
  "main": "src/index.js",
  "scripts": {
    "preinstall": "npm run check-node-version",
    "check-node-version": "npx check-node-version --print --package",
    "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules src/index.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
